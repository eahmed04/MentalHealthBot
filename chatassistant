# Task 5: Evaluate using base model (proxy for fine-tuned behavior)

test_messages = [
    {
        "role": "system",
        "content": system_content
    },
    {
        "role": "user",
        "content": context
    }
]
# Print user input and assistant response clearly
# Run completion
completion = client.chat.completions.create(
    model="gpt-3.5-turbo",
    messages=test_messages,
    temperature=0.3
)

# The assistant's reply
assistant_reply = completion.choices[0].message.content

# Print user input and assistant response
for msg in test_messages:
    if msg["role"] == "user":
        print(f"User input:\n{msg['content']}\n{'-'*60}")

print(f"Assistant response:\n{assistant_reply}\n{'-'*60}")




